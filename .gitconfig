[include]
     	path = 	~/.config/git/tokyonight_moon.gitconfig
[user]
	name = juandrzej
	email = programming.yippee729@passinbox.com
[init]
	defaultBranch = main
[core]
	editor = nvim
	pager = delta
[pull]
	rebase = true
[interactive]
	diffFilter = delta --color-only
[delta]
	dark = true
	navigate = true
    	line-numbers = true
[merge]
	conflictStyle = zdiff3
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
